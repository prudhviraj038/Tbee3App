<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/card"
        android:layout_weight="1"
        android:layout_margin="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPhone 6 16GB"
                android:id="@+id/product_tittle"
                android:textColor="@color/product_name_list"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="15sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="14sp"
                android:layout_height="14sp"
                android:id="@+id/wish_symbol"
                android:src="@drawable/chat_bar_heart_red"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wish_count"
                android:textColor="@color/product_name_list"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_vertical"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <main.app.tbee3app.SquareImageview
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_img"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/days_left"
                    android:layout_centerInParent="true"
                    android:background="@color/primary_trans"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:text="Product Expired"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="visible"
                    android:singleLine="false" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KD 150"
                android:id="@+id/product_price"
                android:textColor="@color/price_color"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="15sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Days Ago"
                android:id="@+id/product_time_last"
                android:layout_marginLeft="2dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:id="@+id/edit_options"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:id="@+id/edit_product"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:id="@+id/sold_product"
                android:layout_marginLeft="2dp"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:id="@+id/delete_product"
                android:layout_marginLeft="2dp"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>