<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sdf">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary"
        android:baselineAligned="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back_btn"
            android:src="@drawable/back_btn_in_detail_page"
            android:layout_gravity="center_vertical"
            android:padding="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView45"
                android:src="@drawable/tbee3_name_logo"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />
        </LinearLayout>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/textView41"
            android:src="@drawable/search_icon"
            android:layout_gravity="center_vertical"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:gravity="center"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:visibility="gone">

                    <view
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        class="main.app.tbee3app.SquareImageview"
                        android:id="@+id/view"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/square_image_border2" />

                    <view
                        class="main.app.tbee3app.SquareImageview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/view2"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/square_image_border2" />

                    <view
                        class="main.app.tbee3app.SquareImageview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/view3"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/square_image_border2" />

                    <view
                        class="main.app.tbee3app.SquareImageview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/view4"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/square_image_border2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/post_tittle"
                        android:background="@color/add_product_details_edit"
                        android:hint="Keywords to filter"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:singleLine="true" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/post_desc"
                        android:background="@color/add_product_details_edit"
                        android:hint="Product Description"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText3"
                        android:hint="140"
                        android:enabled="false"
                        android:background="@color/add_product_details_edit"
                        android:gravity="right"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/post_price_from"
                        android:background="@color/add_product_details_edit"
                        android:hint="Price From"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:inputType="number" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/post_price_to"
                        android:background="@color/add_product_details_edit"
                        android:hint="Price To"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:inputType="number" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/spinner3"
                        android:background="@color/add_product_details_edit"
                        android:layout_weight="1"
                        android:layout_marginLeft="1dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:layout_weight="1"
                        android:background="@color/add_product_details_edit"
                        android:layout_marginRight="1dp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner2"
                        android:layout_weight="1"
                        android:layout_marginLeft="1dp"
                        android:background="@color/add_product_details_edit" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/select_category_layout">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/select_category"
                        android:background="@color/add_product_details_edit"
                        android:hint="Select Category"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:textSize="18sp"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView40"
                        android:src="@drawable/drop_down_icon"
                        android:padding="10dp"
                        android:background="@color/add_product_details_edit" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders_for_views"
                android:padding="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extra Attributes"
                    android:id="@+id/extra_attributes"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/add_submit_btn"
        android:background="#9fcb3e"
        android:textColor="#FFFFFF" />


</LinearLayout>