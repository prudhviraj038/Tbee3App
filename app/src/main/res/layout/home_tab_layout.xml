<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary"
        android:baselineAligned="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/search_icon"
            android:src="@drawable/search_icon"
            android:layout_gravity="center_vertical"
            android:padding="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView42"
                android:src="@drawable/tbee3_name_logo"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/filter_icon"
            android:src="@drawable/filter"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:visibility="visible" />


    </LinearLayout>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        app:pstsTextAllCaps="false"
        app:pstsUnderlineHeight="0dp"
        app:pstsIndicatorHeight="0dp"
        app:pstsIndicatorColor="#e7e7e7"
        app:pstsShouldExpand="true"
        app:pstsDividerColor="@android:color/black"
        app:pstsTabBackground="@drawable/selector_tab"
        app1:pstsTabSwitch="true"
        app1:pstsActivateTextColor="@color/primary"
        app1:pstsDeactivateTextColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#FFFFFF" />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="49dp"
        android:layout_below="@+id/tabs"
        android:background="#EAEAEA" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/menu_bar"
            android:layout_alignParentBottom="false"
            android:layout_alignTop="@+id/khjkjk"
            android:layout_alignBottom="@+id/khjkjk"
            android:layout_marginTop="20dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:gravity="center_vertical"
            android:id="@+id/khjkjk">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/imageView13"
                android:layout_weight="1"
                android:src="@drawable/home_icon"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:padding="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/package_btn"
                android:layout_weight="1"
                android:src="@drawable/box_png"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:padding="5dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/add_a_product"
                android:layout_weight="1"
                android:src="@drawable/add_post_image"
                android:adjustViewBounds="true"
                android:padding="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/wish_list_btn"
                android:layout_weight="1"
                android:src="@drawable/heart_white"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:padding="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/account_btn"
                android:layout_weight="1"
                android:src="@drawable/account"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:padding="5dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
</LinearLayout>