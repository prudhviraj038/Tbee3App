<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/primary" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/back_btn"
                    android:src="@drawable/back_btn_in_detail_page"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/save_btn_settings"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/profile_pic"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true" />

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="70dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/edit_icon"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FFFFFF"
                        android:layout_gravity="center_vertical|right" />

                </FrameLayout>

            </RelativeLayout>

            <ViewFlipper
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewFlipper"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:background="#FFFFFF"
                        android:layout_marginBottom="5dp"
                        android:padding="10dp"
                        android:hint="User Name"
                        android:gravity="center" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/phone"
                        android:background="#FFFFFF"
                        android:padding="10dp"
                        android:hint="Phone Number"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:enabled="false"
                        android:inputType="none" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        android:background="#FFFFFF"
                        android:padding="10dp"
                        android:hint="Email Address"
                        android:layout_marginBottom="5dp"
                        android:gravity="center" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner5"
                        android:layout_marginBottom="5dp"
                        android:background="#FFFFFF"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner6"
                        android:layout_marginBottom="5dp"
                        android:background="#FFFFFF" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/city"
                        android:background="#FFFFFF"
                        android:padding="10dp"
                        android:hint="City"
                        android:layout_marginBottom="5dp"
                        android:gravity="center" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/social_info_edit">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/imageView15"
                                android:src="@drawable/face_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:id="@+id/textView28"
                                android:layout_gravity="center_vertical" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/facebook"
                                android:background="#FFFFFF"
                                android:layout_marginBottom="5dp"
                                android:padding="10dp"
                                android:hint="your id"
                                android:gravity="left" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/imageView20"
                                android:src="@drawable/inst_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:id="@+id/textView81"
                                android:layout_gravity="center_vertical" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/instagram"
                                android:background="#FFFFFF"
                                android:layout_marginBottom="5dp"
                                android:padding="10dp"
                                android:hint="your id"
                                android:gravity="left" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/imageView19"
                                android:src="@drawable/twitter_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:id="@+id/textView43"
                                android:layout_gravity="center_vertical" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/twitter"
                                android:background="#FFFFFF"
                                android:layout_marginBottom="5dp"
                                android:padding="10dp"
                                android:hint="your id"
                                android:gravity="left" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/imageView27"
                                android:src="@drawable/skype_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:id="@+id/textView119"
                                android:layout_gravity="center_vertical" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/skype"
                                android:background="#FFFFFF"
                                android:layout_marginBottom="5dp"
                                android:padding="10dp"
                                android:hint="your id"
                                android:gravity="left" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:id="@+id/mobile_number_view">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Your Mobile Number"
                        android:id="@+id/textView44"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/phone_number"
                        android:background="#FFFFFF"
                        android:layout_marginBottom="5dp"
                        android:padding="10dp"
                        android:text="+965" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:id="@+id/verification_code" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Verification Code"
                        android:id="@+id/textView44"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/act_code_edit"
                        android:background="#FFFFFF"
                        android:layout_marginBottom="5dp"
                        android:padding="10dp" />
                </LinearLayout>
            </ViewFlipper>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="submit"
                android:id="@+id/submit_btn_in_edit"
                android:background="@color/chat_options"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>