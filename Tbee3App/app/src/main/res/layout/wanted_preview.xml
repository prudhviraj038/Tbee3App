<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:drag_edge="left"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/chat_options"
        android:tag="Bottom3"
        android:gravity="center_vertical|right"
        android:id="@+id/up_view">

        <ImageView
            android:id="@+id/phone"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/edit_icon" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        android:layout_weight="1"
        android:layout_margin="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:background="#EAEAEA">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPhone 6 16GB"
                android:id="@+id/product_tittle"
                android:textColor="@color/product_name_list"
                android:textStyle="bold"
                android:textSize="15sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12sp"
                android:id="@+id/wish_symbol"
                android:src="@drawable/chat_bar_heart_red"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wish_count"
                android:textColor="@color/product_name_list"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAEAEA">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keywords"
                android:text="#KeyWords"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="#EEEEEE"
            android:divider="@drawable/attr_bar_divide"
            android:showDividers="middle">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="KD 150"
                android:id="@+id/product_price"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="15sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="new"
                android:id="@+id/condition"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2 Days Ago"
                android:id="@+id/product_time_last"
                android:layout_marginLeft="2dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:id="@+id/edit_options"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:id="@+id/edit_product"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:textSize="20dp"
                android:singleLine="true"
                android:ellipsize="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/delete_product"
                android:layout_marginLeft="2dp"
                android:textSize="20dp"
                android:textColor="@color/primary" />
        </LinearLayout>

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>